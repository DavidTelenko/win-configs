{
  "backlight":
  {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons":
    [
      "󰃞",
      "󰃟",
      "󰃠"
    ],
    "tooltip": false
  },
  "battery":
  {
    "format": "{icon} {capacity}%",
    "format-charging": "󰂄 {capacity}%",
    "format-icons":
    [
      "󰁺",
      "󰁻",
      "󰁼",
      "󰁽",
      "󰁾",
      "󰁿",
      "󰂀",
      "󰂁",
      "󰂂",
      "󰁹"
    ],
    "format-plugged": "󰂄 {capacity}%",
    "interval": 10,
    "states":
    {
      "critical": 15,
      "good": 100,
      "warning": 30
    }
  },
  "clock":
  {
    "format": "{:%H:%M - %a %d}",
    "interval": 60,
    "tooltip-format": "{calendar}",
    "on-click": "gnome-clocks",
    "calendar":
    {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format":
      {
        "months": "<span color='#fabd2f'><b>{}</b></span>",
        "days": "<span color='#d3869b'><b>{}</b></span>",
        "weeks": "",
        "weekdays": "<span color='#8ec07c'><b>{}</b></span>",
        "today": "<span color='#fb4934'><b>{}</b></span>"
      }
    }
  },
  "cpu":
  {
    "format": " {usage}%",
    "tooltip": false
  },
  "custom/lock":
  {
    "format": "󰌾",
    "on-click": "kill -9 -1",
    "tooltip-format": "Lock"
  },
  "custom/media":
  {
    "escape": true,
    "exec": "$HOME/.config/waybar/scripts/media-info.sh get",
    "exec-if": "$HOME/.config/waybar/scripts/media-info.sh can",
    "format": "{icon} {}",
    "format-icons":
    {
      "paused": "",
      "playing": ""
    },
    "interval": 1,
    "signal": 2,
    "max-length": 40,
    "on-click": "playerctl -p $($HOME/.config/hypr/scripts/player_manager.sh get) play-pause",
    "return-type": "json",
    "smooth-scrolling-threshold": 10
  },
  "custom/power":
  {
    "format": "",
    "on-click": "shutdown now",
    "tooltip-format": "Shutdown"
  },
  "custom/reboot":
  {
    "format": "󰜉",
    "on-click": "reboot",
    "tooltip-format": "Reboot"
  },
  "custom/record":
  {
    "exec": "$HOME/.config/hypr/scripts/screenshot.sh record-status",
    "format": "󰑊",
    "interval": "once",
    "on-click": "$HOME/.config/hypr/scripts/screenshot.sh record",
    "return-type": "json",
    "signal": 1,
    "tooltip": false
  },
  "custom/show-tray":
  {
    "format": "",
    "tooltip-format": "Tray"
  },
  "custom/sleep":
  {
    "format": "󰤄",
    "on-click": "systemctl suspend",
    "tooltip-format": "Sleep"
  },
  "group/group-power":
  {
    "drawer":
    {
      "children-class": "not-power",
      "transition-duration": 400,
      "transition-left-to-right": false
    },
    "modules":
    [
      "custom/power",
      "custom/sleep",
      "custom/lock",
      "custom/reboot"
    ],
    "orientation": "horizontal"
  },
  "group/group-tray":
  {
    "drawer":
    {
      "children-class": "not-show-tray",
      "transition-duration": 400,
      "transition-left-to-right": true
    },
    "modules":
    [
      "custom/show-tray",
      "tray"
    ],
    "orientation": "horizontal"
  },
  "hyprland/language":
  {
    "format": " {short}"
  },
  "hyprland/window":
  {
    "max-length": 24
  },
  "hyprland/workspaces":
  {
    "format": "{icon}",
    "on-click": "activate",
    "sort-by-number": true
  },
  "layer": "top",
  "memory":
  {
    "format": " {}%"
  },
  "modules-center":
  [
    "clock"
  ],
  "modules-left":
  [
    "hyprland/workspaces",
    "custom/media"
  ],
  "modules-right":
  [
    "group/group-tray",
    "custom/record",
    "pulseaudio",
    "backlight",
    "network",
    "battery",
    "hyprland/language",
    "group/group-power"
  ],
  "network":
  {
    "format-disconnected": "󰣽",
    "format-ethernet": "󰀃 {ipaddr}/{cidr}",
    "format-linked": "󰀃 {ifname} (No IP)",
    "format-wifi": " {signalStrength}%",
    "tooltip-format": "󰀃 {essid}: {ifname} via {gwaddr}"
  },
  "position": "top",
  "pulseaudio":
  {
    "format": "{icon} {volume}% {format_source}",
    "format-bluetooth": "{icon} {volume}% {format_source}",
    "format-bluetooth-muted": "{icon} {format_source}",
    "format-icons":
    {
      "car": "󰸜",
      "default":
      [
        "",
        "",
        ""
      ],
      "default-muted": "",
      "hands-free": "󰋎",
      "hands-free-muted": "󰋐",
      "headphone": "󰋋",
      "headphone-muted": "󰟎",
      "headset": "󰋎",
      "headset-muted": "󰋐"
    },
    "format-muted": "{icon} {format_source}",
    "format-source": " {volume}%",
    "format-source-muted": "",
    "on-click": "pavucontrol",
    "tooltip": false
  },
  "reload_style_on_change": true,
  "temperature":
  {
    "critical-threshold": 70,
    "format": "{icon} {temperatureC}󰔄",
    "format-critical": "{icon} {temperatureC}󰔄",
    "format-icons":
    [
      "",
      "",
      "",
      "",
      ""
    ],
    "thermal-zone": 4,
    "tooltip": false
  },
  "tray":
  {
    "spacing": 10
  }
}